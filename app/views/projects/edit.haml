.container
  .col-md-10.col-md-offset-1
    %h2.black="Edit #{@project.name} config"

    = simple_form_for @project, url: project_path, html: { method: :put, class: 'form-horizontal' } do |f|
      .form-group.col-md-6.config-form
        = f.input :name, input_html: { class: 'form-control' }
        = f.input :tracker_project_id
        = f.input :jira_project, input_html: { class: 'form-control' }
        .form-group.col-md-6.config-form
          = f.association :pivotal_account
          = f.association :jira_account, default: @project.pivotal_account.id if @project.pivotal_account

          = f.submit class: 'btn btn-primary'
