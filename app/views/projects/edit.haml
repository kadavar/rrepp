.container
  .col-md-10.col-md-offset-1
    %h2.black="Edit #{@project.name if @project} config"

    = simple_form_for @project do |f|
      .form-group.col-md-4.config-form
        = f.input :name, input_html: { class: 'form-control' }
        = f.input :tracker_project_id
        = f.input :jira_project, input_html: { class: 'form-control' }
        = f.input :pivotal_account_id, collection: PivotalAccount.all
        = f.input :jira_account_id, collection: JiraAccount.all
        = f.submit class: 'btn btn-primary'
