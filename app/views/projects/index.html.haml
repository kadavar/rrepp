.container.white
  %h1.text-center Projects

  .col-md-12
    %table.table.project-table
      %thead
        %tr
          %th Id
          %th Name
          %th Config Name
          %th Pid
          %th Last Update
          %th Status
          %th Actions
      %tbody
        - @projects.each_with_index do |project, index|
          %tr
            %td= index + 1
            %td= project.name
            %td= link_to project.config.try(:name), project_config_path(project.config), class: 'white'
            %td= project.pid
            %td= project.last_update
            %td= project_label(project.online)
            %td
              .col-md-7.action-border
                - if project.online
                  = link_to stop_project_path(project), class: 'action-link white' do
                    %i.fa.fa-stop
                - else
                  / TODO: uncomment when logic would be implemented
                  / %a.action-link.white
                  /   %i.fa.fa-play
                %a.action-link.white
                  %i.fa.fa-refresh

